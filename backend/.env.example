# API settings
API_V1_STR=/api
SECRET_KEY=your-secret-key-here-please-change-it
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=180

# Database settings
DATABASE_URL=postgresql://sql_proxy_user:sql_proxy_password@localhost:5432/sql_proxy

# LDAP settings
LDAP_SERVER=ldap://ldap.example.com:389
LDAP_BASE_DN=dc=example,dc=com
LDAP_USER_DN=ou=users,dc=example,dc=com
LDAP_GROUP_DN=ou=groups,dc=example,dc=com
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=admin-password

# Security settings
CORS_ORIGINS=http://localhost:3000,https://your-domain.com
DEBUG_MODE=True

# SQL Proxy settings
SQL_PROXY_USERNAME=proxy_user
SQL_PROXY_PASSWORD=proxy_password

# Rate limiting
ENABLE_RATE_LIMITING=True
DEFAULT_RATE_LIMIT_REQUESTS=60
DEFAULT_RATE_LIMIT_PERIOD=60

# Query timeouts in seconds
DEFAULT_TIMEOUT_ADMIN=300
DEFAULT_TIMEOUT_ANALYST=120
DEFAULT_TIMEOUT_POWERBI=60
DEFAULT_TIMEOUT_READONLY=30

# Notification settings
EMAIL_NOTIFICATIONS_ENABLED=True
SLACK_NOTIFICATIONS_ENABLED=True
EMAIL_FROM=sqlproxy@example.com
SMTP_SERVER=smtp.example.com
SMTP_PORT=587
SMTP_USERNAME=smtp_user
SMTP_PASSWORD=smtp_password
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/XXXXX/YYYYY/ZZZZZ
SYSTEM_URL=http://localhost:3000

# Data masking settings
MASKING_ENABLED=True
MASKING_EXEMPT_ROLES=admin

